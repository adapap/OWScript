{
	"name": "owscript",
	"displayName": "OWScript",
	"description": "Syntax highlighting, build tools, and more for OWScript, a Python-like programming language which compiles down into Overwatch workshop code.",
	"version": "0.3.0",
	"keywords": [
		"overwatch",
		"workshop",
		"compile"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/adapap/OWScript.git"
	},
	"publisher": "adapap",
	"license": "MIT",
	"icon": "assets/OWScriptIcon.png",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [
		"onLanguage:owscript"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"title": "Compile",
				"category": "OWScript",
				"command": "owscript.compile"
			}
		],
		"configuration": {
			"title": "OWScript",
			"properties": {
				"owscript.path": {
					"type": "string",
					"default": "",
					"format": "uri",
					"description": "The root path to the OWScript directory."
				},
				"owscript.clipboard": {
					"type": "boolean",
					"default": true,
					"description": "Copy Workshop Code to clipboard automatically."
				},
				"owscript.compileOnSave": {
					"type": "boolean",
					"default": false,
					"description": "Automatically recompile code when a .owpy file is saved."
				}
			}
		},
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == owscript",
					"command": "owscript.compile",
					"group": "OWScript"
				}
			]
		},
		"snippets": [
			{
				"language": "owscript",
				"path": "./snippets.json"
			}
		],
		"languages": [
			{
				"id": "owscript",
				"aliases": [
					"OWScript",
					"owscript"
				],
				"extensions": [
					".owpy"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "owscript",
				"scopeName": "source.owscript",
				"path": "./syntaxes/owscript.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"build": "js-yaml syntaxes/owscript.tmLanguage.yaml > syntaxes/owscript.tmLanguage.json",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"js-yaml": "^3.13.1",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	},
	"dependencies": {
		"copy-paste": "^1.3.0"
	}
}
